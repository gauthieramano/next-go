{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!dist", "!convex/_generated"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "formatter": { "enabled": true },
    "parser": { "tailwindDirectives": true }
  },
  "html": { "formatter": { "enabled": true } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": []
          }
        }
      },
      "style": {
        "noExportedImports": "error",
        "noInferrableTypes": "error",
        "noMagicNumbers": "error",
        "noNegationElse": "error",
        "noParameterAssign": {
          "level": "error",
          "options": { "propertyAssignment": "deny" }
        },
        "noSubstr": "error",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn",
        "noYodaExpression": "warn",
        "useArrayLiterals": "warn",
        "useBlockStatements": { "level": "warn", "fix": "safe", "options": {} },
        "useCollapsedElseIf": "warn",
        "useCollapsedIf": "warn",
        "useConsistentCurlyBraces": {
          "level": "warn",
          "fix": "safe",
          "options": {}
        },
        "useConsistentObjectDefinitions": "warn",
        "useNamingConvention": {
          "level": "warn",
          "fix": "none",
          "options": {}
        },
        "useShorthandAssign": { "level": "warn", "fix": "safe", "options": {} },
        "useSingleVarDeclarator": {
          "level": "warn",
          "fix": "safe",
          "options": {}
        }
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
